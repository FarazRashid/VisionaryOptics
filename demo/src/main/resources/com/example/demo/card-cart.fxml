<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="88.0" prefWidth="847.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.CardCartController">
   <children>
      <VBox prefHeight="133.0" prefWidth="847.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <HBox alignment="CENTER" layoutX="-10.0" layoutY="-15.0" prefHeight="133.0" prefWidth="786.0" spacing="10.0" AnchorPane.bottomAnchor="-30.0" AnchorPane.leftAnchor="-10.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="-15.0">
         <children>
            <Label fx:id="cartCardId" text="{cardCart.id}" />
            <ImageView fx:id="cardCartImage" fitHeight="118.0" fitWidth="197.0" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="cardCartName" layoutX="10.0" layoutY="10.0" text="{cardCart.name}" />
            <Label fx:id="cardCartCategory" layoutX="272.0" layoutY="10.0" text="{cardCart.category}" />
            <Label fx:id="cardCartQuantity" layoutX="357.0" layoutY="10.0" text="{cardCart.quantity}" />
            <Spinner fx:id="cardCartSpinner"  prefHeight="25.0" prefWidth="74.0" />
            <Label fx:id="cardCartPrice" layoutX="458.0" layoutY="10.0" text="{cardCart.price}" />
            <Button fx:id="deleteFromCart" mnemonicParsing="false" onAction="#onClickDeleteFromCart" text="Delete" />

         </children>
      </HBox>
      </VBox>
     
   </children>
</AnchorPane>
