<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="180.0" prefWidth="230.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.CardProductController">
   <children>
      <VBox layoutX="65.0" layoutY="-34.0" prefHeight="197.0" prefWidth="360.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ImageView fitHeight="132.0" fitWidth="360.0" pickOnBounds="true" preserveRatio="true" />
            <HBox prefHeight="27.0" prefWidth="335.0">
               <children>
                  <Label fx:id="productName" prefHeight="49.0" prefWidth="217.0" text="{product.name}" wrapText="true">
                     <font>
                        <Font size="21.0" />
                     </font></Label>
                  <Label text="\$" />
                  <Label fx:id="productPrice" prefHeight="27.0" prefWidth="105.0" text="{productPrice}">
                     <font>
                        <Font size="18.0" />
                     </font></Label>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Spinner fx:id="productQuantity" prefHeight="38.0" prefWidth="185.0" />
                  <Button fx:id="deleteFromCart" mnemonicParsing="false" onAction="#onClickAddToCart" prefHeight="38.0" prefWidth="124.0" text="Add To Cart">
                     <font>
                        <Font size="17.0" />
                     </font></Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
